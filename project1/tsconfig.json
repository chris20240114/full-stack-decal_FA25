{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "strict": true,

    "rootDir": "src",
    "outDir": "dist",
    "noEmitOnError": true,
    "sourceMap": true,

    "moduleResolution": "Bundler",
    "skipLibCheck": true,

    /* If you also keep hand-written .js in src/, leave these on.
       If you only use TypeScript, set both to false or remove them. */
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}